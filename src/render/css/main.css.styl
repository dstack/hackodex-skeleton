@import 'nib'
@import 'typographic'
@import 'jeet/_jeet'

pure-black = #000
black = #212121
white = #fff

/* colors */
red = #f44336
pink = #E91E63
purple = #9C27B0
deep-purple = #673AB7
indigo = #3F51B5
blue = #2196F3
light-blue = #03A9F4
cyan = #00BCD4
teal = #009688
green = #4CAF50
light-green = #8BC34A
lime = #CDDC39
yellow = #FFEB3B
amber = #FFC107
orange = #FF9800
deep-orange = #FF5722
brown = #795548
grey = #9E9E9E
blue-grey = #607D8B

primary-color = pink
secondary-color = deep-purple

global-reset()
typographic()

v-center()
  display -ms-flexbox
  display -webkit-flex
  display flex
  -ms-flex-align center
  -webkit-align-item center
  -webkit-box-align center
  align-items center

*
  box-sizing border-box

body
  font-family $futura
  color black
  background white

nav
  tnh = 44px
  &.drawer
    dw = 196px
    fixed top 0px right 0px //(dw*-1)
    width dw
    height 100%
    padding-top tnh
    background black
    border-left solid 1px darken(white, 50%)
    z-index 4
    display none
    .item
      display block
      padding 6px 12px
      border-bottom solid 1px darken(white, 50%)
      color darken(white, 35%)
      font-size 14px
      &:hover
        color white
        background rgba(white, 25%)
  &.topnav
    fixed top 0px left 0px
    width 100%
    height h = tnh
    z-index 5
    clearfix()
    font-size 0.75em
    font-weight 100
    box-shadow 0px 0px 2px 2px rgba(black, 0.55)
    .menu-btn
      background transparent
      border solid 1px white
      border-radius 6px
      min-width 65px
      text-transform uppercase
      padding 0px 12px
      float right
      margin-top 8px
      font-size 0.8em
      &:hover
        background rgba(255,255,255,0.15)
    &>div>ul
      display inline
      >li
        float left
        position relative
      li ul
        display none
        absolute top 100% left 0px
        background rgba(pure-black, 0.65)
        min-width 200px
        margin 0px
        padding 0px
        li a
          display block
          padding 8px
          color darken(white, 35%)
          border-bottom solid 1px darken(white, 65%)
          &:hover
            color white
      li:hover ul
        display block
    .item
      v-center()
      height h
      line-height h
      vertical-align middle
      display inline-block
      min-width 60px
      padding 0px 14px
      color darken(white, 35%)
      box-shadow 1px 0px 0px rgba(255,255,255,0.25)
      text-align center
      &:hover
        color white
      &.active
        background secondary-color
        color white
      img
        float left
    .logo
      font-size 1.5em
      font-weight 500
      color white
      float left
      img
        relative top 4px left 0px


a
  text-decoration none

.red
  color red

.threeDtext
  text-shadow 0 1px 0 #bbb, 0 2px 0 #b9b9b9, 0 3px 0 #aaa, 0 4px 0 #a9a9a9, 0 5px 0 #999, 0 6px 1px rgba(0,0,0,.15), 0 0 5px rgba(0,0,0,.15), 0 1px 3px rgba(0,0,0,.35), 0 3px 5px rgba(0,0,0,.25), 0 5px 10px rgba(0,0,0,.3),  0 10px 10px rgba(0,0,0,.25), 0 20px 20px rgba(0,0,0,.2)

.btn
  display inline-block
  height h = 28px
  line-height h
  min-width 75px
  text-align center
  padding 0px 16px
  background primary-color

.cf
  clearfix()
.ct
  width 80%
  max-width 960px
  margin 0px auto
  clearfix()

.inverted
  background black
  *
    color white

.masthead
  height 100%
  min-height 400px
  background-image url('/img/textures/diagmonds.png'), linear-gradient(to bottom, primary-color 0%,secondary-color 100%)
  h1
    margin-top 0.5em
    font-size 3em
    margin-bottom 0px
  h6
    margin-top 0.02em
  h4
    margin 0.75em 0px
  .to
    h = 36px
    border none
    background white
    height 1px
    width 80%
    margin (h/2) 10%
    position relative
    font-style italic
    &:before
      content 'to'
      display block
      background primary-color
      height h
      width h
      line-height h
      border-radius 50%
      position absolute
      top -18px
      left 50%
      margin-left ((h+4)/-2)
      border solid 2px white

.loc
  width 100%
  height 500px
  background-size cover
  position relative
  address
    background black
    padding 12px
    margin-bottom 0px
    absolute bottom 0px right 0px
    border-left solid 3px primary-color

.center
  text-align center
  v-center()
  justify-content center

.content
  padding 3em 0px

.main
  margin 3em 0px
  .section
    margin-bottom 24px
    clearfix()
  .about-engineers
  .about-artists
  .about-teams
    text-align center
    i.fa
      font-size 200px
  .about-engineers
    color teal
  .about-artists
    color amber
  .about-teams
    color light-green
  .big-split
    .big-side
      j-column(2/3)
    .small-side
      j-column(1/3)
  .three-col .col
    j-column(1/3)


.footer
  margin-bottom 0px
  font-size 0.75em
  padding-top 35px
  *
    color darken(white, 35%)
  h1, h2, h3, h4, h5, h6
    margin 0.25em 0px
    color white
    font-weight 700
  h4
    font-size 1em
  a:hover
    color white
  p
    line-height 1.5em
  ul
    padding 0px
    margin 0px
    li
      padding 0.415 0em
      line-height 1.5em
  .small-col
    text-align left
    j-column(3/16)
    box-shadow 1px 0px 0px 0px rgba(255, 255, 255, 0.1)
  .big-col
    j-column(7/16)
    text-align left
  .site-info
    margin-top 24px
    background pure-black
    line-height h = 36px
    height = h
    img
      relative top -18px

/* sponsors */
.sponsor
  j-column(1/4, cycle: 4)
  height 150px
  text-align center
  text-transform uppercase
  color black
  transition color 0.25s ease
  &:hover
    color primary-color
  img
    max-width 90%
    max-height 90%

.text-page-masthead
  height 28%
  min-height 200px
  margin-top 44px
  background-size cover
  background-position 50% 50%
  background-repeat no-repeat
  perspective 600px
  h1, p
    color white
    background rgba(black, 0.85)
    border-radius 2px
    padding 8px 12px
    display inline-block
    transform rotateX( 15deg )
  p
    margin-top 0.5em

@media screen and (max-width: 500px)
  nav.topnav
    .logo
      font-size 0px
    .item
      padding 0px 8px

@import 'agenda'
